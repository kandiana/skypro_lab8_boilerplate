.main-page {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 20px;
  box-sizing: border-box;
}

.main-page__coffee {
  min-height: 100px;
  min-width: 100px;
  height: 50%;
  width: 50%;
  cursor: pointer;
}

.main-page__text {
  font-family: Arial, Helvetica, sans-serif;
  font-size: 20px;
  font-weight: 700;
  color: #843f2c;
}
